<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="?android:attr/colorBackground"
    tools:context="com.jimg.scoutingapp.fragments.TopUsersFragment">
    <TextView
        android:id="@+id/topUsersPageTitleTextView"
        style="@android:style/TextAppearance.Medium"
        android:text="@string/top_users_report_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TableLayout
        android:id="@+id/topUsersTableLayout"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/topUsersPageTitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topUsersListView" />
    </TableLayout>
    <TextView
        android:id="@+id/noTopUsersTextView"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/topUsersPageTitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currently_no_comments_title_text" />
</RelativeLayout>