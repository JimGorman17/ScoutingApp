<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="6dip"
    android:paddingTop="4dip">

    <ImageView
        android:id="@+id/columnUserPictureForComment"
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:paddingRight="5dip" />

    <TextView
        android:id="@+id/columnUserDisplayNameForComment"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:paddingRight="5dip" />
'   <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/columnCommentStringForPlayerPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/comment_action_buttons_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/comment_edit_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_edit"/>
            <ImageButton
                android:id="@+id/comment_delete_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>